extends ../layouts/common.pug
block content
  h3 Register new account
  
  if errors
    each error in errors
      .alert.alert-danger= error

  if message
      .alert.alert-danger= message
  
  form(action="/auth/register", method="POST")
    .form-group.d-flex
      label.mr-2(for="email") Email: 
      input#email.form-control(type="text", name="email",value= values ? values.email : "")
    
    .form-group.d-flex
      label.mr-2(for="password") Password: 
      input#password.form-control(type="password", name="password",value= values ? values.password : "")
    
    .group-btn
      button.btn.btn-primary.mr-2 Register
      a.btn.btn-secondary(href="/auth/login") Login