extends ../layouts/common.pug
block content
 
  h3 Transactions list:
  if errors
    each error in errors
       alert.alert-danger= error 
  
  table(class="table")
    thead
      tr
        th(scope="col") User name
        th(scope="col") tranxID
        th(scope="col") Book title
        th(scope="col") Action
    tbody
      if transactionsList
        each tranx in transactionsList
          tr
            td=tranx ? tranx.userName : "Invalid user"
            td=tranx ? tranx.id : "Invalid ID"
            td=tranx ? tranx.bookTitle : "Invalid book"
            td
              .group-btn
                a.btn.btn-primary(href=`/transactions/${tranx.id}/complete`) Complete
  a.btn.btn-secondary(href="/transactions/create") Add more transaction  